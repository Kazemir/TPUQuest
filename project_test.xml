<?xml version="1.0" encoding="utf-8"?>
<project>
	<meta title="TPUQuest" package="com.tpuquest" version="1.0.0" company="" />

 	<app file="TPUQuest" main="com.tpuquest.Test" path="bin_test" />

	<window fps="30" background="0x333333" />
	<window width="800" height="600" resizable="false" unless="mobile" />
	<window fullscreen="false" if="mobile" />
	<window orientation="landscape" vsync="true" antialiasing="0" if="cpp" />

	<source path="src" />

	<haxelib name="openfl" />
	<haxelib name="openfl-bitfive" if="html5" />
	<haxelib name="HaxePunk" />

	<assets path="assets/graphics" rename="graphics" include="*.png|*.jpg" />
	<assets path="assets/audio" rename="audio" include="*.wav|*.ogg|*.mp3" />
	<assets path="assets/font" rename="font" include="*.ttf|*.otf" />
	<assets path="assets/cfg" rename="" include="*.xml" />

	<icon path="assets/HaxePunk.svg" />
</project>
