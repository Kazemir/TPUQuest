<?xml version="1.0" encoding="utf-8"?>
<project>
	<meta title="TPUQuest" package="com.tpuquest" version="1.0.0" company="" />

 	<app file="TPUQuest" main="com.tpuquest.Main" path="bin" />

	<window fps="30" background="0x333333" />
	<window width="800" height="600" resizable="true" unless="mobile" />
	<window fullscreen="false" if="mobile" />
	<window orientation="landscape" vsync="true" antialiasing="0" if="cpp" />

	<android permission="android.permission.WRITE_EXTERNAL_STORAGE"/>
	
	<source path="src" />
	
	<haxelib name="HaxePunk" />
	<haxelib name="openfl" />
	<haxelib name="openfl-native" if="android" />
	<?haxelib name="nme" if="android" ?>

	<assets path="assets/graphics" rename="graphics" include="*.png|*.jpg" />
	<assets path="assets/audio" rename="audio" include="*.wav|*.ogg|*.mp3" />
	<assets path="assets/music" rename="music" include="*.wav|*.ogg|*.mp3" />
	<assets path="assets/font" rename="font" include="*.ttf|*.otf" />
	<assets path="assets/cfg" rename="cfg" include="*.xml" />
	<assets path="assets/levels" rename="levels" include="*.xml" />
	
	<icon path="assets/icon.svg" />
	<icon path="assets/icon.ico" />

</project>
